NAME = ex03

SRC = main.cpp HumanA.cpp HumanB.cpp Weapon.cpp 

CXX = c++

CXXFLAGS = -Wall -Wextra -Werror -std=c++98


OBJ = ${SRC:.cpp=.o}

all: ${NAME}


${NAME}: ${OBJ}
	$(CXX) ${CXXFLAGS} $(OBJ) -o ${NAME}

clean:
	rm -f ${OBJ}

fclean: clean
	rm -f ${NAME}

re: fclean all

.PHONY: all clean fclean re